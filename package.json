{
  "name": "p-client",
  "productName": "PClient",
  "version": "1.0.0",
  "description": "A Client for Ev.io",
  "main": "main.js",
  "author": {
    "name": "PandasMagic"
  },
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder -w",
    "build-linux": "electron-builder --linux",
    "pb-linux": "electron-builder --linux -p always",
    "pb-win": "electron-builder -w -p always",
    "build-mac": "electron-builder -m",
    "pack": "electron-builder --dir",
    "dis": "electron-builder --x64 --mac",
    "gh-publish": "electron-builder --x64 --mac -p always",
    "package-win": "electron-packager . p-client --overwrite --asar=true --platform=win32 --arch=x64 --icon=assets/icons/logo.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"PClient\""
  },
  "build": {
    "appId": "org.electron.EvClient",
    "asar": false,
    "productName": "PClient",
    "mac": {
      "icon": "assets/icons/logo.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "assets/icons/logo.png",
      "target": "deb",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "assests/icons/logo.png",
      "publish": [
        {
          "provider": "github",
          "url": "https://github.com/PandasMagic/PClient/"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "",
      "artifactName": "EvClient-Windows.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "PClient",
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "EvClient",
      "artifactName": "EvClient-Mac.dmg"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PandasMagic/PClient.git"
  },
  "keywords": [
    "Ev",
    "ev.io"
  ],
  "license": "ISC",
  "dependencies": {
    "discord-rpc": "^3.1.4",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.3.1",
    "electron-prompt": "^1.6.1",
    "electron-updater": "^4.3.5",
    "v8-compile-cache": "^2.2.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.2.0",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0"
  }
}
